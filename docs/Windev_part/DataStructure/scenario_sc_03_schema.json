{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schema/scenario-sc03.schema.json",
  "title": "Scenario SC-03 â€“ Ajustement ponctuel",
  "type": "object",
  "required": ["scenarioType", "planningContext", "scenarioParameters", "dataSet"],
  "properties": {
    "scenarioType": { "const": "SC-03" },
    "planningContext": { "$ref": "ScenarioContract.schema.json#/properties/planningContext" },
    "scenarioParameters": {
      "type": "object",
      "required": ["periode", "prioriteCouverture"],
      "additionalProperties": false,
      "properties": {
        "periode": {
          "type": "object",
          "required": ["dateDebut", "dateFin"],
          "properties": {
            "dateDebut": { "type": "string", "format": "date" },
            "dateFin": { "type": "string", "format": "date" }
          }
        },
        "prioriteCouverture": { "type": "string", "enum": ["FAIBLE", "NORMALE", "FORTE"] }
      }
    },
    "dataSet": { "$ref": "ScenarioContract.schema.json#/properties/dataSet" }
  }
}